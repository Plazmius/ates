@page
@model Auth.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Popug</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Popug.UserName" class="control-label"></label>
                <input asp-for="Popug.UserName" class="form-control" />
                <span asp-validation-for="Popug.UserName" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label asp-for="Popug.Email" class="control-label"></label>
                <input type="email" asp-for="Popug.Email" class="form-control" />
                <span asp-validation-for="Popug.Email" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Popug.Role" class="control-label"></label>
                <input asp-for="Popug.Role" class="form-control" />
                <span asp-validation-for="Popug.Role" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Popug.Password" class="control-label"></label>
                <input type="password" asp-for="Popug.Password" class="form-control" />
                <span asp-validation-for="Popug.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
